@model Blog.Models.Article
@{
    ViewBag.Title = "Details";
}
<div class="container">

    <article>
        <header>
            <h2>
                @Model.Title
            </h2>
        </header>

        @if (Model.ImgUrl == null)
        {
            <div class="col-sm-12">
                @Model.Content
            </div>
        }
        else
        {
            <div class="col-sm-6">
                <img src="@Model.ImgUrl" class="img-rounded" alt="Incorrect URL" style="width:100%">
            </div>

            <div class="col-sm-6">
                <div class="pull-left">
                    @foreach (var tag in Model.Tags)
                    {
                        <span>@Html.ActionLink(tag.Name, "ListArticlesByTag", "Tag", new { @id = tag.Id }, new { @class = "btn btn-default btn-xs" })</span>
                    }
                    <p>@Model.Content</p>
                </div>
                <hr>
                @Html.ActionLink(string.Format($"Comments ({Model.Comments.Count})"), "ListCommentsOnArticle", "Comment", new { @id = Model.Id }, null)
                Seen @Model.ViewCounter times
            </div>
        }
        <div class="col-sm-12">
            <hr>
            @foreach (var comment in Model.Comments)
            {
                <div class="well well-sm">
                    <comment>
                        <header>
                            <h4>
                                @comment.Name
                                <em class="pull-right">@comment.Email</em>
                            </h4>
                        </header>
                        <p>
                            @comment.VisitorComment
                        </p>
                    </comment>
                </div>
            }
            @Html.ActionLink("Add comment", "Create", "Comment", new { @id = Model.Id }, null)
            <hr>
        </div>
        <footer>
            <div class="pull-left">
                @if (User.IsInRole("Admin") || Model.IsUserAuthor(User.Identity.Name))
                {
                    @Html.ActionLink("Edit", "Edit", "Article", new { @id = Model.Id }, new { @class = "btn btn-success btn-xs" })
                    @Html.ActionLink("Delete", "Delete", "Article", new { @id = Model.Id }, new { @class = "btn btn-danger btn-xs" })
                }
                @Html.ActionLink("Back", "ListArticlesByCategory", "Category", new { @id = Model.CategoryId }, new { @class = "btn btn-default btn-xs" })
            </div>
        </footer>
    </article>
</div>
